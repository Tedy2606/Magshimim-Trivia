<Page x:Class="TriviaClient.Results"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="650"
      Title="Results">

    <Grid>
        <TextBlock Text="Top Players" Width="360" Height="80" Foreground="{DynamicResource Text}" Margin="145,0,145,620" FontSize="54" FontWeight="DemiBold" TextAlignment="Center"/>

        <ScrollViewer Width="400" Height="335" Margin="125,115,125,250" Background="{DynamicResource StackBackground}" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="stackPanel">
                <!-- Here are the users text blocks in the room,
                winner color = orange, loser color = white -->
                <TextBlock x:Name="user" Text="Waiting for players to finish" Width = "360" Foreground="{DynamicResource Highlight}" FontSize="42" FontFamily="Arial" FontWeight="Bold" TextAlignment="Center" TextWrapping="WrapWithOverflow"/>

            </StackPanel>
        </ScrollViewer>

        <TextBlock x:Name="correctAnswers" Text="Correct Answers: " Foreground="{DynamicResource Text}" Margin="110,496,110,144" FontSize="36" FontWeight="DemiBold" TextAlignment="Center"/>

        <TextBlock x:Name="averageAnswerTime" Text="Average Answer Time: " Foreground="{DynamicResource Text}" Margin="110,561,110,79" FontSize="36" FontWeight="DemiBold" TextAlignment="Center"/>

        <Button Content="Back To Menu" Width = "360" Height = "60" Background="{DynamicResource Buttons}" Foreground="{DynamicResource Text}" Margin="145,600,145,40" FontSize="36" FontFamily="Arial" FontWeight="Bold" Click="backToMenu_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
